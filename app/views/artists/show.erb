<p>artist name: <%= @artist.name %></p>

<p>songs:<p>
<% @artist.songs.each_with_index do |song, index| %>
<p><%=index + 1%>. <a href="/songs/<%= song.slug %>"><%= song.name %></a></p>
<% end %>

<p>genres:<p>
<% @artist.genres.each_with_index do |genre, index| %>
<p><%=index + 1%>. <a href="/genres/<%= genre.slug %>"><%= genre.name %></a></p>
<% end %>
